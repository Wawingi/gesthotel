<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:background="@color/preto"
            android:layout_marginRight="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtart"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="QUARTO: "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/fundonav"
                        android:layout_marginTop="12dp"
                        android:gravity="left"/>
                    <TextView
                        android:id="@+id/txtquarto"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/fundonav"
                        android:layout_marginTop="12dp"
                        android:gravity="left"/>
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/fundonav"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:text="TIPOLOGIA: "
                        android:textSize="13sp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/fundonav"
                        android:layout_marginTop="12dp"
                        android:gravity="left"/>
                    <TextView
                        android:id="@+id/txttipologia"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:textSize="13sp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/fundonav"
                        android:layout_marginTop="12dp"
                        android:gravity="left"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:text="ANDAR: "
                        android:textSize="13sp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/fundonav"
                        android:layout_marginTop="3dp"
                        android:gravity="left"/>
                    <TextView
                        android:id="@+id/txtandar"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:textSize="13sp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/fundonav"
                        android:layout_marginTop="3dp"
                        android:gravity="left"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:text="ESTADO: "
                        android:textSize="13sp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/fundonav"
                        android:layout_marginTop="3dp"
                        android:gravity="left"/>
                    <TextView
                        android:id="@+id/txtestado"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:textSize="13sp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/fundonav"
                        android:layout_marginTop="3dp"
                        android:gravity="left"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/cardview_shadow_start_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Escolha o novo estado do quarto "
                android:textSize="18sp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:gravity="left"/>

            <RadioGroup
                android:id="@+id/radiogrupo"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rdsujo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sujo"/>
                <RadioButton
                    android:id="@+id/rdlivre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Livre"/>
                <RadioButton
                    android:id="@+id/rdmanutec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manutenção"/>
            </RadioGroup>

            <Button
                android:id="@+id/btnestado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="OK"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/fundo"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_curvo"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
